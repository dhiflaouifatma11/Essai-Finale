{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Categories list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('adminCategories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>
                    <a href="{{ path('adminCategories_show', { 'id': entity.id }) }}"><i class="icon icon-eye-open"></i></a>
                    <a href="{{ path('adminCategories_edit', { 'id': entity.id }) }}"><i class="icon icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div>
        <a href="{{ path('adminCategories_new') }}" class="btn btn-info btn-xs">
            Ajouter Categorie
        </a>

    </div>

    {% endblock %}
